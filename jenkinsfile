pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ChakriAmajala/HTML-Self-page.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t html-self-page .'
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    sh '''
                    # stop & remove old container if exists
                    docker rm -f html-self-page || true

                    # run new container
                    docker run -d -p 8081:80 --name html-self-page html-self-page
                    '''
                }
            }
        }
    }
}
